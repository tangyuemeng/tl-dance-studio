<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="content">留言板</view>
</cu-custom>

<view class='animation-shake btn' style='animation-duration: 1.5s;animation-iteration-count: infinite;'>
<button class="cu-btn lg round bg-black" bindtap="showModal" data-target="DialogModal1">写留言</button>
</view>

<view class="cu-modal {{modalName=='DialogModal1'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">留言板</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-red"></text>
      </view>
    </view>
    <view class="padding-xl">
      <input placeholder="推荐的韩舞和曲目" bindinput="contentinput"></input>
    </view>
    <view class="cu-bar bg-white justify-end">
      <view class="action">
        <button class="cu-btn line-black text-black" bindtap="hideModal">取消</button>
        <button class="cu-btn bg-black margin-left" bindtap="sendmessage">确定</button>

      </view>
    </view>
  </view>
</view>

<scroll-view class="margin-bottom-xl" style="height:50%">
  <view class="cu-card">
  <view class="cu-item shadow ">
  <view class="cu-list menu bg-white">
 <view class="cu-item " wx:for="{{messageboard}}" wx:key >
  <view class="content flex-sub">
        <view class="text-black text-sm">{{item.title}}</view>
        <text class="text-gray ">{{item.content}}</text>
      </view>
  <view class="action text-black" >
    <text class="cuIcon-appreciate text-black text-xl margin-lr-xs " wx:if="{{!item.isliked}}" bindtap="appreciate" data-title="{{item.title}}" data-content="{{item.content}}"></text>
    <text class="cuIcon-appreciatefill text-xl text-black margin-lr-xs" wx:if="{{item.isliked}}"></text>
    {{item.likenum}}
    </view>
    </view>
</view>
</view>
</view>
</scroll-view>
  


<view class='load-progress {{loadProgress!=0?"show":"hide"}}' style="top:{{CustomBar}}px;">
  <view class='load-progress-bar bg-green' style="transform: translate3d(-{{100-loadProgress}}%, 0px, 0px);"></view>
  <view class='load-progress-spinner text-green'></view>
</view>

<view class="bottom">
<image class='bottom-img' src='../../images/bottom.png' mode='widthFix' style='width:100%;height:10%'></image>
</view>