/* miniprogram/pages/shop/shop.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #2B2B2B;
 }

 .shop-title{
    position: absolute;
    left: 7vw;
    top: 13vh;
    
    font-family: 'Prompt';
    font-style: normal;
    font-weight: 500;
    font-size:32px;
    line-height: 42px;
    text-align: center;
    
    /* PINKBLUE */
    
    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.shop-title-shadow{
    position: absolute;
    left: 7vw;
    top: 14vh;
    
    font-family: 'Prompt';
    font-style: normal;
    font-weight: 500;
    font-size:32px;
    line-height: 42px;
    text-align: center;
    
    /* PINKBLUE */
    
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), linear-gradient(109.18deg, rgba(43, 43, 43, 0.6) 0%, rgba(187, 223, 241, 0.48) 115.23%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  
}

