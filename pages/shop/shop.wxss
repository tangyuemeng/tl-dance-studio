/* miniprogram/pages/shop/shop.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #2B2B2B;
 }

 .shop-title{
    left: 7vw;
    top: 11vh;
 }


.shop-title-shadow{
    position: absolute;
    left: 7vw;
    top: 12vh;
    
    
    /* PINKBLUE */
    
    background: linear-gradient(0deg, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.2)), linear-gradient(109.18deg, rgba(43, 43, 43, 0.6) 0%, rgba(187, 223, 241, 0.48) 115.23%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  
}

.pink-blue-card-left{
    position: absolute;
    width: 40vw;
    height: 25vh;
    left: 6vw;
    
    /* PINKBLUE */
    
    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 20px 20px 20px 20px;
}

.pink-blue-card-right{
    position: absolute;
    width: 40vw;
    height: 25vh;
    right: 6vw;
    
    /* PINKBLUE */
    
    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 20px 20px 20px 20px;
}

.coupon-text{
    top: 17.5vh; 
    left: 3vw;
}

.coupon-price{
    top: 19.5vh; 
    left: 3vw;
}

.back-icon{
    position: absolute;
    width: 16vw;
    height: 16vw;
    left: 15vw;
    bottom: 10vh;
    border-radius: 50%;
    background: linear-gradient(120deg, transparent 30%, #9aadac 38%, #9aadac
    40%, transparent 48%);
    background-size: 200% 100%;
    background-position: 100% 0;
    animation: shinning 2s infinite;
}

.coupons{
    position: absolute;
    width: 30.3vw;
    height: 14vh;
    top: 2vh;
    left: 4vw;
}