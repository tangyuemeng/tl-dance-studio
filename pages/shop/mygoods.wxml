<cu-custom bgColor="bg-white" isBack="{{true}}">
  <view slot="content">我的卡包</view>
</cu-custom>

<view class="cu-card">
  <view class="cu-item padding-sm shadow-blur" style="background-color:#333333" wx:for="{{list}}" wx:key>
      <view class="flex align-center">
        <view class="flex-sub">
          <view class="text-xxl text-white margin-left">{{item.title}}</view>
          <view class="bg-blue round margin-left-sm" style="width:120rpx">
          <view class="text-xs" style="margin-left:10rpx">{{item.type}}</view>
          </view>
        </view>
        <view class="flex-twice align-center margin-left">
          <view class="text-white text-sm">{{item.text}}</view>
          <view class="text-xs text-white">有效期至:{{item.deadtime}}</view>
        </view>
        <view class="flex-sub margin-left-sm justify-center padding-xs">
          <view class=" text-white margin-left">{{item.price}}积分</view>

        </view>
      </view>
    </view>
  </view>

<view class='load-progress {{loadProgress!=0?"show":"hide"}}' style="top:{{CustomBar}}px;">
  <view class='load-progress-bar bg-green' style="transform: translate3d(-{{100-loadProgress}}%, 0px, 0px);"></view>
  <view class='load-progress-spinner text-green'></view>
</view>

<view class="bottom">
<image class='bottom-img' src='../../images/bottom.png' mode='widthFix' style='width:100%;height:10%'></image>
</view>

