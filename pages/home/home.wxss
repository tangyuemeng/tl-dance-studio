page {
    width: 100%;
    height: 100%;
    background-color: #2B2B2B;
}

.small-text-home{
    position: absolute;
    left: 6.3vw;
    top: 9vh;
}

.middle-text-home{
    position: absolute;
    left: 5.7vw;
    top: 12vh;
}

.pink-blue-card-left{
    position: absolute;
    width: 44vw;
    height: 28vh;
    left: 5vw;
    top: 48vh;

    /* PINKBLUE */

    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 20px 60px 0px 20px;
}

.pink-blue-card-left::after{
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    opacity: 0.4;
    transition: .3s;
  }

.pink-blue-card-right{
    position: absolute;
    width: 42vw;
    height: 18.4vh;
    right: 5vw;
    top: 48vh;

    /* PINKBLUE */

    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 60px 20px 20px 0px;
}

.pink-blue-card-bottom{
    position: absolute;
    width: 42vw;
    height: 17vh;
    right: 5vw;
    top: 68vh;

    /* PINKBLUE */

    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
    border-radius: 0px 20px 20px 60px;
}

.logo-home {
    position: absolute;
    width: 43vw;
    height: 5vh;
    left: 5vw;
    top: 80vh;
}

.logo-home::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 1s infinite linear;
}

.logo-home::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 3s infinite linear;
}

.refresh-icon{
    position: absolute;
    width: 8vw;
    height: 8vw;
    right: 5vw;
    top: 11.5vh;
    transform: rotate(360deg);
    transition: .5s;
    filter: invert(96%) sepia(54%) saturate(2940%) hue-rotate(202deg) brightness(100%) contrast(107%);
}

.slider{
    animation: slider 0.6s;
}
@keyframes slider {
    from {
      transform: translateX(100%); 
    }
  
    to {
      transform: translateX(0%);
    }
}