/* miniprogram/pages/userinfo/userinfo.wxss */
page {
    width: 100%;
    height: 100%;
    background-color: #2B2B2B;
}

.card-userinfo{
    position: absolute;
    left: 5vw;
    top:14vh;
}

.logo-home {
    position: absolute;
    width: 43vw;
    height: 5vh;
    left: 5vw;
    top: 6vh;
}

.logo-home::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 1s infinite linear;
}

.logo-home::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 3s infinite linear;
}

