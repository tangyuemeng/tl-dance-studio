.logo {
    position: absolute;
    width: 60vw;
    height: 7vh;
    left: 20vw;
    top: 20vh;

    font-family: 'Prompt';
    font-style: black;
    font-weight: 900;
    font-size: 40px;
    line-height: 60px;
    text-align: center;
    
    /* PINKBLUE */
    
    background: linear-gradient(95.55deg, #FBC5FF 45.57%, rgba(187, 223, 241, 0.71) 129.64%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

.logo::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 1s infinite linear;
}

.logo::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 3s infinite linear;
}


