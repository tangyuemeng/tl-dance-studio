.logo {
    position: absolute;
    width: 60vw;
    height: 7vh;
    left: 20vw;
    top: 20vh;
}

.logo::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 1s infinite linear;
}

.logo::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    border: 3px solid #FBC5FF;
    transition: all .5s;
    animation: clippath 3s infinite linear;
}


